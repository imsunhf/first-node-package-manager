<view>
  <form bindsubmit="formSubmit" >
    <view>
      <view class="title">姓名:</view>
      <input  placeholder="请输入姓名" auto-focus  />
    </view>
    <view>
      <view class="title">性别:</view>
      <radio-group name="gender">
        <label><radio value="男">男</radio></label>
        <label><radio value="女">女</radio></label>
      </radio-group>
    </view>
    <view>
      <view class="title">血型:</view>
      <picker name="bloodType" bindchange="bloodTypeChange" range="{{bloodTypes}}">
        <view>当前选择: {{bloodTypes[index]}}</view>
      </picker>
    </view>
    <view>
      <view class="title">选择医疗情况:</view>
      <checkbox-group name="medicalConditions">
        <label class="medical_checkbox">
          <checkbox wx:for="{{medicalConditions}}" wx:key="{{index}}" value="item.name" checked="{{item.checked}}" >{{item.name}}</checkbox>
        </label>
      </checkbox-group>
    </view>
    <view>
      <view class="title">填写服药情况</view>
      <textarea name="medicationCompliance" placeholder="请填写服药情况" auto-height="true"></textarea>
    </view>
    <view>
      <view>是否为器官捐献者</view>
      <switch name="isOrganDonor" class="switch"></switch>
    </view>
    <view>
      <view class="title">紧急联系人号码</view>
      <input type="number" placeholder="请输入紧急联系人号码" auto-focus name="phoneNumber" bindinput="phoneNumberChanage"  />
    </view>
    <view class="submitbutton">
      <button size="mini" formType="submit" hidden="{{isShowUpdate}}">提交</button>
      <button size="mini" formType="submit" hidden="{{!isShowUpdate}}">更新</button>
    </view>
  </form>
</view>